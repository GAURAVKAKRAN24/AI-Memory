                        borderColor: "#135598",
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {                    
                        yAxes: [{
                            
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });

        var ctx = document.getElementById('myChart4');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
            labels: ["smalltalks", "buy", "demo", "whereIs"],
            datasets: [{
                label: "Population (millions)",
                backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
                data: [2478,5267,734,784]
            }]
            },
            options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    title: {
                        display: true,
                        text: 'Intents Hit'
                    },
                    scales: {                    
                        yAxes: [{
                            
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
